{
  "name": "bloc",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/bloc/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/bloc/src/**/*.{ts,tsx,js,jsx}",
          "packages/bloc/tests/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["tsc --noEmit -p packages/bloc/tsconfig.lib.json"]
      }
    },
    "typedoc": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/bloc/src",
        "commands": ["typedoc --out ../../../docs/bloc index.ts"]
      }
    },
    "build": {
      "executor": "@nrwl/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/packages/bloc"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      },
      "dependsOn": ["typecheck"]
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/bloc/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "options": {
        "buildTarget": "bloc:build",
        "outputPath": "dist/packages/bloc",
        "plugins": [
          [
            "@semantic-release/pnpm",
            {
              "pkgRoot": "dist/packages/bloc",
              "npmPublish": false
            }
          ],
          [
            "@semantic-release/pnpm",
            {
              "pkgRoot": "packages/bloc",
              "tarballDir": "dist/packages/bloc"
            }
          ]
        ],
        "tagFormat": "bloc-v${VERSION}"
      }
    }
  }
}
